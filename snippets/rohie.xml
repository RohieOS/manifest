<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <remote name="rohie"
          fetch="https://github.com/RohieOS/"
          revision="refs/heads/r" />

  <remote name="pixel-gitlab"
          fetch="https://gitlab.com/PixelExperience"
          revision="eleven" />

  <project path="bionic" name="platform_bionic" remote="rohie" />

  <!-- Build Repos -->
  <project path="build/make" name="platform_build_make" groups="pdk" remote="rohie" >
    <copyfile src="core/root.mk" dest="Makefile" />
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>

  <project path="build/blueprint" name="platform_build_blueprint" groups="pdk,tradefed" remote="rohie" />
  <project path="build/soong" name="platform_build_soong" groups="pdk,tradefed" remote="rohie" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>

  <!-- External Repos -->
  <project path="external/selinux" name="platform_external_selinux" remote="rohie" />
  <project path="external/airbnb-lottie" name="platform_external_airbnb-lottie" remote="rohie" />

  <!-- Frameworks Repos -->
  <project path="frameworks/base" name="platform_frameworks_base" remote="rohie" />
  <project path="frameworks/av" name="platform_frameworks_av" remote="rohie" />
  <project path="frameworks/native" name="platform_frameworks_native" remote="rohie" />

  <!-- SePolicy Repos -->
  <project path="device/qcom/sepolicy" name="device_qcom_sepolicy" remote="rohie" />

  <project path="development" name="platform_development" remote="rohie" />

  <!-- Packages -->
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="rohie" />

  <!-- rohie Repos -->
  <project path="vendor/aosp" name="vendor_aosp" remote="rohie" />
  <project path="vendor/gapps" name="vendor_gapps" remote="pixel-gitlab" clone-depth="1" />

  <!-- manifest Repos -->
  <project path="manifest" name="manifest" remote="rohie" />

  <!-- System Repos -->
  <project path="system/core" name="platform_system_core" remote="rohie" />
  <project path="system/sepolicy" name="platform_system_sepolicy" remote="rohie" />
  <project path="system/vold" name="platform_system_vold" remote="rohie" />

</manifest>

